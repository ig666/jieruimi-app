      <van-field value="{{situation.suggest}}" bindchange="handleProxy" clearable label="建议措施" placeholder="请输入建议措施" type="textarea" autosize="{{autosize}}" data-eventid="{{'7'}}" data-comkey="{{$k}}" class="_van-field data-v-26ffd48e"></van-field>
